<resources>
    <!-- Base application theme. -->
    <style name="Theme.OCBC" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_500</item>
        <item name="colorSecondaryVariant">@color/black_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorBackground">@color/white500</item>
        <item name="colorCardBackground">@color/white</item>
        <item name="colorTextTitle">@color/black</item>
        <item name="colorTextBody">@color/black_700</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.BottomSheetDialog.Core</item>
    </style>
    <style name="Widget.AppCompat.Toolbar.TextSize">
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>
    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="ShapeAppearance.App.RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_4sdp</item>
    </style>
    <style name="ShapeAppearance.App.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_24sdp</item>
        <item name="cornerSizeTopRight">@dimen/_24sdp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    <style name="TextAppearance.MaterialComponents.Headline1.Core">
        <item name="android:textColor">?attr/colorTextTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_24ssp</item>
    </style>
    <style name="TextAppearance.MaterialComponents.Headline2.Core">
        <item name="android:textColor">?attr/colorTextTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>
    <style name="TextAppearance.MaterialComponents.Body1.Core">
        <item name="android:textColor">?attr/colorTextTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>
    <style name="TextAppearance.MaterialComponents.Body2.Core">
        <item name="android:textColor">?attr/colorTextTitle</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
    <style name="Base.Widget.AppCompat.Button.Borderless.Core">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Base.Widget.AppCompat.Button.Borderless.Core.Transparent">
        <item name="android:background">@drawable/bg_transparent_effect</item>
    </style>
    <style name="Base.Widget.AppCompat.Button.Borderless.Core.Fill">
        <item name="android:background">@drawable/bg_primary_variant_fill_effect</item>
    </style>
    <style name="Base.Widget.AppCompat.Button.Borderless.Core.Outline">
        <item name="android:background">@drawable/bg_primary_outline_effect</item>
    </style>
    <style name="Base.Widget.AppCompat.Button.Borderless.Core.Outline.White">
        <item name="android:background">@drawable/bg_white_outline_effect</item>
    </style>
    <style name="ThemeOverlay.MaterialComponents.TextInputEditText.Core">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
    <style name="ThemeOverlay.MaterialComponents.TextInputEditText.Core.Variant">
        <item name="android:background">@drawable/bg_input_variant</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
    <style name="BottomSheet.Core" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.BottomSheet</item>
    </style>

    <style name="ThemeOverlay.BottomSheetDialog.Core"
        parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.BottomSheet.Core</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Widget.BottomSheet.Core" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.BottomSheet</item>
    </style>
</resources>